<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/white"
    android:elevation="15dp"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginBottom="2dp"
    app:cardCornerRadius="10dp"
    android:layout_marginTop="8dp"
    android:layout_height="130dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/itemNameCart"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginStart="20dp"
            android:text="Potato(23)"
            />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:visibility="gone"
            android:layout_marginStart="20dp"
            app:srcCompat="@drawable/multiply"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/colorAccent"
                android:text="Qty"/>

            <TextView
                android:id="@+id/itemQtyCart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_marginStart="20dp"
                android:textColor="@color/black"
                android:text="2"/>

        </LinearLayout>




        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="20dp"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_drag_handle_black_24dp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/colorAccent"
                android:text="Total"/>

            <TextView
                android:id="@+id/itemTotalPriceCart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="21sp"
                android:textStyle="bold"
                android:textColor="@color/app_color"
                android:layout_marginStart="20dp"
                android:text="46"/>

        </LinearLayout>



    </LinearLayout>

    <ImageButton
        android:id="@+id/deleteButtonCart"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@color/white"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        app:srcCompat="@drawable/delete"
        />

    </RelativeLayout>



</androidx.cardview.widget.CardView>