<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/white"
    android:elevation="15dp"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginBottom="2dp"
    app:cardCornerRadius="10dp"
    android:layout_height="60dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/itemNameCart"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/app_color"
            android:layout_marginStart="20dp"
            android:text="Potato(23)"
            />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="20dp"
            app:srcCompat="@drawable/multiply"
            />

        <TextView
            android:id="@+id/itemQtyCart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/app_color"
            android:layout_marginStart="20dp"
            android:text="2"/>


        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="20dp"
            app:srcCompat="@drawable/ic_drag_handle_black_24dp"
            />


        <TextView
            android:id="@+id/itemTotalPriceCart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="19sp"
            android:textStyle="bold"
            android:textColor="@color/app_color"
            android:layout_marginStart="20dp"
            android:text="46"/>

    </LinearLayout>

    <ImageButton
        android:id="@+id/deleteButtonCart"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@color/white"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        app:srcCompat="@drawable/delete"
        />

    </RelativeLayout>



</androidx.cardview.widget.CardView>