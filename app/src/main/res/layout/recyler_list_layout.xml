<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_marginStart="20dp"
    android:layout_marginTop="15dp"
    app:cardCornerRadius="10dp"
    app:cardBackgroundColor="@color/background"
    android:layout_height="200dp">


<!--   new Layout-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

<!--        <LinearLayout-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="match_parent">-->

            <androidx.cardview.widget.CardView
                android:layout_width="170dp"
                app:cardCornerRadius="9dp"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/mainItemimage"
                    android:layout_width="170dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    app:srcCompat="@drawable/scenery1"
                    />

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="160dp"
                android:layout_centerVertical="true"
                android:elevation="150dp"
                app:cardCornerRadius="5dp"
                android:layout_marginStart="150dp"
                android:layout_height="180dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="16dp"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvItemName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="serif"
                        android:text="Spinach"
                        android:textColor="@color/app_color"
                        android:textSize="19sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvitemDes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:layout_marginTop="3dp"
                        android:layout_marginEnd="3dp"
                        android:fontFamily="serif"
                        android:visibility="visible"
                        android:text="Spinach is a leafy Vegetable"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tvItemPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="serif"
                            android:text="30"
                            android:textStyle="bold"
                            android:textColor="#0D78A8"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/tvPriceDesc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:text="Rs/Bunch"
                            android:fontFamily="serif"
                            android:textColor="@color/colorAccent"
                            android:textSize="14sp" />
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/nextClick"
                    android:layout_width="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginStart="100dp"
                    android:layout_marginBottom="20dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Add"
                        android:layout_height="wrap_content">

                    </TextView>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginEnd="20dp"
                        app:srcCompat="@drawable/next_arrow"
                        />


                </LinearLayout>

            </androidx.cardview.widget.CardView>




<!--        </LinearLayout>-->





    </RelativeLayout>


